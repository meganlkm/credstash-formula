{
    "role_name": "{{ iam_read["role_name"] }}",
    "description": "Role used to read credstash secrets",
    "assume_role_policy_document": {
        "Version": "2012-10-17",
        "Statement": {
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::{{ account_id }}:root",
                "Service": "lambda.amazonaws.com"
            },
            "Action": "sts:AssumeRole"
        }
    },
    "attach_policy_name": "{{ iam_read["policy_name"] }}",
    "attach_policy_description": "Policy used to read credstash secrets",
    "attach_policy_document": {
        "Version": "2012-10-17",
        "Statement": [
            {
                "Action": [
                    "kms:Decrypt"
                ],
                "Effect": "Allow",
                "Resource": "lookup:kms:alias/{{ kms_alias }}"
            },
            {
                "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:Query",
                    "dynamodb:Scan"
                ],
                "Effect": "Allow",
                "Resource": "arn:aws:dynamodb:{{ region }}:{{ account_id }}:table/{{ table_name }}"
            }
        ]
    },
    "region": "{{ region }}"
}
